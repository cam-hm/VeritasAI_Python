# Django Settings
# ===============
SECRET_KEY=django-insecure-change-this-in-production-please-generate-new-key
DEBUG=True

# Database Configuration (PostgreSQL)
# ===================================
DB_NAME=veritasai_python
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (for Celery and Caching)
# ============================================
REDIS_URL=redis://localhost:6379/0

# Ollama Configuration (Local LLM Provider)
# =========================================
# Ollama base URL (default: http://127.0.0.1:11434)
OLLAMA_BASE_URL=http://127.0.0.1:11434

# Ollama Embedding Model (for document embeddings)
# Options: nomic-embed-text, all-minilm, etc.
OLLAMA_EMBED_MODEL=nomic-embed-text

# Ollama Chat Model (for chat responses)
# Options: llama3.1, llama3.2, gemma2, etc.
OLLAMA_CHAT_MODEL=llama3.1

# LLM Provider Configuration
# ==========================
# Default provider: ollama (local)
DEFAULT_LLM_PROVIDER=ollama

# Storage Configuration
# =====================
# Path to store uploaded documents
STORAGE_PATH=storage

# CORS Configuration (for frontend)
# =================================
